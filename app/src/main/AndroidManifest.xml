<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.newapp">

    <!-- Dit zorgt ervoor dat de website of iets online kan ingeladen worden -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- de android:hardwareAccelerated zorgt ervoor dat er HTML5 videos kunnen worden afgespeeld -->
        <activity
            android:name=".MainActivity"
            android:hardwareAccelerated="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity  android:name=".AboutVMG" android:parentActivityName=".MainActivity"  android:hardwareAccelerated="true">

        </activity>

    </application>


</manifest>