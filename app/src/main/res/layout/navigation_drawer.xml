<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"


    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <include
            layout="@layout/nav_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3.13" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inread"
            android:gravity="center"
            android:background="#1976D2"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="italic"
            />

        <Button
            android:id="@+id/scrollview_vmg"
            style="?android:attr/borderlessButtonStyle"

            android:theme="?android:selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="#90CAF9"
            android:text="scrollview"
            android:elevation="4dp"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#212121"

            />

        <Button
            android:id="@+id/testview_vmg"
            style="?android:attr/borderlessButtonStyle"

            android:theme="?android:selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="#90CAF9"
            android:text="testview"
            android:elevation="4dp"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#212121"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inread Top"
            android:gravity="center"
            android:background="#1976D2"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="italic"
            />
        <Button
            android:id="@+id/in_read_top_listview"
            android:theme="?android:selectableItemBackground"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:textColor="#212121"
            android:background="#90CAF9"
            android:fontFamily="sans-serif-condensed"
            android:elevation="4dp"
            android:text="ListView" />

        <Button
            android:id="@+id/in_read_top_recyclerview"
            android:theme="?android:selectableItemBackground"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:textColor="#212121"
            android:background="#90CAF9"
            android:fontFamily="sans-serif-condensed"
            android:elevation="4dp"
            android:text="recyclerview" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Info/Home"
            android:gravity="center"
            android:background="#1976D2"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="italic"
            />

        <Button
        android:id="@+id/home"
        android:theme="?android:selectableItemBackground"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:textColor="#212121"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-condensed"
        android:elevation="4dp"
        android:text="Home" />


        <Button
            android:id="@+id/about_vmg"
            android:theme="?android:selectableItemBackground"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:textColor="#212121"
            android:background="@color/primary_light"
            android:fontFamily="sans-serif-condensed"
            android:elevation="4dp"
            android:text="About VMG" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:background="@color/primary_dark"
            app:srcCompat="@mipmap/ic_launcher"
            android:elevation="10dp"
            />


    </LinearLayout>


</ScrollView>

