<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context="com.example.user.newapp.AboutVMG">

    <LinearLayout
    android:layout_width="0dp"
    android:layout_height="71dp"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp"
        android:weightSum="1">

    <include


    android:id="@+id/toolbar"
    layout="@layout/toolbar_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible" />

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scroll_about_page"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.04">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.04"
                    android:text="@string/video_media_group_text"
                    android:textColor="@android:color/black"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="25dp" />

                <ImageView
                    android:id="@+id/VMG_pic_about"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@android:color/holo_blue_dark"
                    android:visibility="invisible"
                    app:srcCompat="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="261dp"
                    android:text="@string/wat_hebben_wij_te_bieden"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>

    <android.support.design.widget.NavigationView
    android:id="@+id/navigation_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="start"
    app:headerLayout="@layout/navigation_drawer"
    app:menu="@menu/drawer_menu">

    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>